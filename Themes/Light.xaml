<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global -->
    <SolidColorBrush x:Key="Window.Background" Color="White"/>
    <SolidColorBrush x:Key="Text.Primary" Color="Black"/>
    <SolidColorBrush x:Key="Text.Subtle" Color="Gray"/>
    
    <!-- Controls (Borders, Inputs) -->
    <SolidColorBrush x:Key="Control.Border" Color="#FFE0E0E0"/> <!-- Args Box -->
    <SolidColorBrush x:Key="Control.StrongBorder" Color="#FF828790"/> <!-- Lists -->
    <SolidColorBrush x:Key="Input.Background" Color="White"/>
    <SolidColorBrush x:Key="List.Background" Color="Transparent"/>

    <!-- Queue Status Row Backgrounds -->
    <SolidColorBrush x:Key="Row.Pending" Color="#FFF3F3F3"/>
    <SolidColorBrush x:Key="Row.Running" Color="#FFE6F1FF"/>
    <SolidColorBrush x:Key="Row.Ok" Color="#FFE6FFE6"/>
    <SolidColorBrush x:Key="Row.Failed" Color="#FFFFE6E6"/>
    <SolidColorBrush x:Key="Row.Skipped" Color="#FFFFF7DA"/>

    <!-- Selection -->
    <SolidColorBrush x:Key="Selection.Active" Color="#FF2D6CDF"/>
    <SolidColorBrush x:Key="Selection.Inactive" Color="#FF8FB1EC"/>
    <SolidColorBrush x:Key="Selection.Text" Color="White"/>
    
    <!-- Directory Text -->
    <SolidColorBrush x:Key="Directory.Normal" Color="#FF777777"/>
    <SolidColorBrush x:Key="Directory.Selected" Color="#CCFFFFFF"/>

    <!-- Resize Pill -->
    <SolidColorBrush x:Key="Pill.Normal" Color="#FFC0C0C0"/>
    <SolidColorBrush x:Key="Pill.Hover" Color="#FF999999"/>
    <SolidColorBrush x:Key="Pill.Drag" Color="#FF555555"/>

    <!-- EXPANDER SPECIFIC (Moved from Window Resources to here) -->
    <SolidColorBrush x:Key="Expander.Static.Circle.Stroke" Color="#FF333333"/>
    <SolidColorBrush x:Key="Expander.Static.Circle.Fill" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Expander.Static.Arrow.Stroke" Color="#FF333333"/>
    <SolidColorBrush x:Key="Expander.MouseOver.Circle.Stroke" Color="#FF5593FF"/>
    <SolidColorBrush x:Key="Expander.MouseOver.Circle.Fill" Color="#FFF3F9FF"/>
    <SolidColorBrush x:Key="Expander.MouseOver.Arrow.Stroke" Color="#FF000000"/>
    <SolidColorBrush x:Key="Expander.Pressed.Circle.Stroke" Color="#FF3C77DD"/>
    <SolidColorBrush x:Key="Expander.Pressed.Circle.Fill" Color="#FFD9ECFF"/>
    <SolidColorBrush x:Key="Expander.Pressed.Arrow.Stroke" Color="#FF000000"/>
    <SolidColorBrush x:Key="Expander.Disabled.Circle.Stroke" Color="#FFBCBCBC"/>
    <SolidColorBrush x:Key="Expander.Disabled.Circle.Fill" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="Expander.Disabled.Arrow.Stroke" Color="#FF707070"/>

</ResourceDictionary>