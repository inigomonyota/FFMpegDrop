<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global Backgrounds -->
    <SolidColorBrush x:Key="Window.Background" Color="#FF202020"/>
    <SolidColorBrush x:Key="Text.Primary" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Text.Subtle" Color="#FF9D9D9D"/>

    <!-- Inputs (TextBox, ComboBox) -->
    <SolidColorBrush x:Key="Input.Background" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="Control.Border" Color="#FF454545"/>
    <SolidColorBrush x:Key="Control.StrongBorder" Color="#FF666666"/>

    <!-- Lists -->
    <SolidColorBrush x:Key="List.Background" Color="Transparent"/>

    <!-- Queue Status (Subtle tints) -->
    <SolidColorBrush x:Key="Row.Pending" Color="Transparent"/>
    <SolidColorBrush x:Key="Row.Running" Color="#200078D4"/>
    <!-- Subtle Blue -->
    <SolidColorBrush x:Key="Row.Ok" Color="#20107C10"/>
    <!-- Subtle Green -->
    <SolidColorBrush x:Key="Row.Failed" Color="#20C50F1F"/>
    <!-- Subtle Red -->
    <SolidColorBrush x:Key="Row.Skipped" Color="#20986F0B"/>
    <!-- Subtle Gold -->

    <!-- Selection -->
    <SolidColorBrush x:Key="Selection.Active" Color="#FF005FB8"/>
    <!-- Windows Blue -->
    <SolidColorBrush x:Key="Selection.Inactive" Color="#FF353535"/>
    <SolidColorBrush x:Key="Selection.Text" Color="White"/>

    <!-- Directory Text -->
    <SolidColorBrush x:Key="Directory.Normal" Color="#FF888888"/>
    <SolidColorBrush x:Key="Directory.Selected" Color="#CCFFFFFF"/>

    <!-- Resize Pill -->
    <SolidColorBrush x:Key="Pill.Normal" Color="#FF555555"/>
    <SolidColorBrush x:Key="Pill.Hover" Color="#FF999999"/>
    <SolidColorBrush x:Key="Pill.Drag" Color="#FFFFFFFF"/>

    <!-- Expander Icons (White/Gray) -->
    <SolidColorBrush x:Key="Expander.Static.Circle.Stroke" Color="#FF808080"/>
    <SolidColorBrush x:Key="Expander.Static.Circle.Fill" Color="Transparent"/>
    <SolidColorBrush x:Key="Expander.Static.Arrow.Stroke" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="Expander.MouseOver.Circle.Stroke" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Expander.MouseOver.Circle.Fill" Color="#FF333333"/>
    <SolidColorBrush x:Key="Expander.MouseOver.Arrow.Stroke" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="Expander.Pressed.Circle.Stroke" Color="#FF005FB8"/>
    <SolidColorBrush x:Key="Expander.Pressed.Circle.Fill" Color="#FF111111"/>
    <SolidColorBrush x:Key="Expander.Pressed.Arrow.Stroke" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="Expander.Disabled.Circle.Stroke" Color="#FF404040"/>
    <SolidColorBrush x:Key="Expander.Disabled.Circle.Fill" Color="Transparent"/>
    <SolidColorBrush x:Key="Expander.Disabled.Arrow.Stroke" Color="#FF404040"/>

</ResourceDictionary>

  