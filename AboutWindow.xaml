<Window x:Class="FfmpegDrop.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About FFmpeg Drop" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Window.Background}"
        Foreground="{DynamicResource Text.Primary}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="FFmpeg Drop" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="v1.03" FontSize="12" Foreground="{DynamicResource Text.Subtle}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Content -->

        <TextBlock Grid.Row="1" TextWrapping="Wrap" TextAlignment="Center" LineHeight="20">
    A fast, responsive, and honest batch processor for FFmpeg. 
    Built to fix the irritations of other video converters.
    <LineBreak/><LineBreak/>
    Created by Craig Mann.
    <LineBreak/> <!-- This pushes the link to the next line -->
    <Hyperlink NavigateUri="https://github.com/inigomonyota/FFMpegDrop" RequestNavigate="Hyperlink_RequestNavigate">
        https://github.com/inigomonyota/FFMpegDrop
    </Hyperlink>
        </TextBlock>



        <!-- Links / Buttons -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center">

            <!-- The Donation Link -->
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,15">
                <Hyperlink NavigateUri="https://www.buymeacoffee.com/YOUR_LINK_HERE" RequestNavigate="Hyperlink_RequestNavigate">
                    Support Development (Buy me a coffee)
                </Hyperlink>
            </TextBlock>

            <Button Content="Close" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>